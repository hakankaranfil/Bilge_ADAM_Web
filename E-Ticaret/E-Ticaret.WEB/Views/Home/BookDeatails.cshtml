@model E_Ticaret.Entity.Model.ViewModel.ViewBookForDetails
@{
    ViewBag.Title = "BookDeatails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    #Sayfa {
        color: black;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-lg-3 col-lg-offset-4">
            <img class="img-responsive" src="@Model.BookPhotoURL" alt="">
        </div>
    </div>
    <br />
    <br />
    <div class="col-md-9 col-lg-offset-1">
        <div class="thumbnail">

            <div class="caption-full">
                <h4 class="pull-right">Fiyat:@Model.Price</h4>
                <h4>
                    <a href="#">@Model.BookName</a>
                </h4>
                <h4 id="Sayfa">Sayfa Sayısı:@Model.PageCount</h4>
                <p>@Model.BookSubject</p>
                <p>

                </p>
                
            </div>
        </div>
    </div>
    <form class="form-horizontal" role="form">
        <div class="form-group">
           
            <label for="demo2" class="col-md-4 control-label">Adet:</label> <input id="demo2" type="text" value="0" name="demo2" class="col-md-8 form-control">
            
        </div>
        <p><a role="button" class="btn-info btn-lg" href="/Home/Sepetim/@Model.BookID">Sepete Ekle</a></p>
    </form>
</div>



