@model E_Ticaret.Entity.Model.Product
@{
    ViewBag.Title = "Ödeme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @{
        int count = 0;
        decimal Total = 0;
        foreach (var item in ViewBag.Liste)
        {
            count += item.BookCount;
            Total += item.TotalPrice;
        }
    }
    
    <h2>Toplam @count ürün</h2>
    <h2>Toplam Fiyat: @Total TL</h2>

    <div class="col-lg-12">
        <div class="row">
            @foreach (var item in ViewBag.Liste)
            {
                <div class="row">
                    <div class="col-lg-12">
                        <div class="thumbnail">

                            <div class="wordBreak caption">
                                @*<img img-responsive" src="@item.PhotoUrl">*@
                                <p class="title"><a class="aApp" href="/Home/BookDetails/@item.BookID">@item.BookName</a></p>
                                <h4>@item.BookCount adet</h4>
                                <h4>@item.Price TL</h4>

                                <p>Total: @item.TotalPrice TL</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <form role="form" method="post">
                        <input type="hidden" value="" name="Total" />
                        <input type="text"
                               class="form-control"
                               name="NameSurname"
                               placeholder="İsim Soyisim"
                               required />
                        <br />
                        <input type="text"
                               class="form-control"
                               name="Address"
                               placeholder="Adres"
                               required />
                        <br />
                        <input type="hidden"
                               class="form-control"
                               name="BookCount"
                               placeholder="BookCount"
                               value="@item.BookCount"
                               required />
                        <button type="submit"
                                class="btn btn-danger btn-lg">
                            SİPARİŞİ TAMAMLA
                        </button>

                    </form>
                </div>
            }
           
        </div>
    </div>
</div>



