
@{
    ViewBag.Title = "Writer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<E_Ticaret.Entity.Model.ViewModel.ViewBookForHome>
<div class="container">
    <div class="col-lg-offset-4  col-lg-9">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-3 col-lg-3 col-md-3">
                    <div class="thumbnail">
                        <img src="@item.BookPhotoURL" alt="">
                        <div class="caption">
                            <h4 class="pull-right">@item.Price</h4>
                            <h4>
                                <a href="/Home/BookDeatails/@item.BookID">@item.BookName</a>
                            </h4>
                            <p> <a target="_blank" href="/Home/BookDeatails/@item.WriterID">@item.WriterName</a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>







