@model List<E_Ticaret.Entity.Model.Book>

@foreach (var item in Model)
{
    <div class="row">
        <div class="detail col-lg-9">
            <div class="thumbnail">
                <div class="caption-full">
                    <div class="row">
                        <div class="image">
                            <img class="image"
                                
                                 src="@item.BookPhotoURL" />
                        </div>
                        <p class="book-name">
                            <a href="#"
                               name="BookName">
                                @item.BookName
                            </a>
                        </p>
                        <p class="who">
                            <strong>Yazar : </strong>
                            <a name="BookSubject">    
                                @item.BookSubject
                            </a>
                        </p>
                        <br />
                        <div class="row">
                            <div class="col-lg-3 col-lg-offset-5  text-right">

                                <input type="hidden"
                                       value="@item.Price"
                                       name="Price" />
                                <h3>
                                    <strong>@item.Price TL</strong>
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
        }



