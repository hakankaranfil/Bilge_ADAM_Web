
@{
    ViewBag.Title = "AddPost";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<title>Summernote</title>
<link href="~/Content/css/Summernote/summernote.css" rel="stylesheet" />
<script src="~/Scripts/Summernote/summernote.js"></script>


</head>
<body>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">

                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            @*Post metodu ile Controller'daki HttpPost Metoduna gider*@

                            <form role="form" method="post">
                                <div class="form-group">
                                    <input class="form-control"
                                           type="text"
                                           placeholder="Başlık"
                                           name="Title">
                                </div>
                                @*<div class="form-group">
                                    <textarea class="form-control"
                                              placeholder="Concent"
                                              name=""
                                              rows="5"></textarea>*@
                                <div id="summernote" name="Concent">
                                    <p>Hello Summernote </p>
                                </div>


                                <div class="form-group">
                                    <input class="form-control"
                                           type="text"
                                           placeholder="Category"
                                           name="Category">
                                </div>

                                <div class="form-group">

                                    <input class="form-control"
                                           type="text"
                                           placeholder="Etiketleri virgül ile"
                                           name="Tags">

                                </div>
                                <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

   
</body>








<script>
    $(document).ready(function () {
        $('#summernote').summernote(); $('#summernote').summernote({
            height: 300,                 // set editor height
            minHeight: null,             // set minimum height of editor
            maxHeight: null,             // set maximum height of editor
            focus: true                  // set focus to editable area after initializing summernote
        });
    });
</script>


