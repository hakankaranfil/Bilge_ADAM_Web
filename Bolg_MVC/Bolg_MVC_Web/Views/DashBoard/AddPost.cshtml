@model Blog_MVC_DAL.Models.WPost
@{
    ViewBag.Title = "AddPost";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<title>Summernote</title>
<link href="~/Content/css/Summernote/summernote.css" rel="stylesheet" />
<script src="~/Scripts/Summernote/summernote.js"></script>





<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Yazı Bilgileri
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form role="form" method="post">
                            <input type="hidden" name="postID" value="@(Model != null ? Model.PostID.ToString():"")" />
                            <div class="form-group">
                                <input class="form-control"
                                       type="text"
                                       placeholder="Başlık"
                                       name="Title"
                                       value="@(Model != null ? Model.Title : "")">
                            </div>

                            <div class="form-group">
                                @*Content*@
                                @*<textarea class="form-control"
                                    placeholder="İçerik"
                                    name=""
                                    rows="5"></textarea>*@

                                <textarea id="summernote"
                                          name="Content">
                                    @(Model != null ? Model.Content : "")
                                </textarea>
                            </div>

                            <div class="form-group">
                                <input class="form-control"
                                       type="text"
                                       placeholder="Kategori"
                                       name="Category"
                                       value="@(Model != null ? Model.Category : "")">
                            </div>

                            <div class="form-group">
                                <input class="form-control"
                                       type="text"
                                       placeholder="C#, Asp.Net, Microsoft"
                                       name="Tags"
                                       value="@(Model != null ? Model.Tags : "")">
                            </div>

                            <button type="submit"
                                    class="btn btn-primary btn-block">
                                Kaydet
                            </button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#summernote').summernote({
            height: 300,
        });
    });
</script>


