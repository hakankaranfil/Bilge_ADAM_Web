
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model List<Blog_MVC_Entity.Models.Post>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Tüm Yazılar
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Ad</th>
                                <th>Tarih</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.PostDate</td>
                                        <td>
                                            <a class="btn btn-warning btn-circle" href="/DashBoard/AddPost/@item.PostID"><i class="fa fa-pencil">Düzenle</i></a>
                                        </td>
                                        <td>
                                            <a class="btn btn-danger btn-circle" href="/DashBoard/Delete/@item.PostID"><i class="fa fa-minus">Sil</i></a>
                                        </td>
                                    </tr>

                                }
                            }
                            
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>


