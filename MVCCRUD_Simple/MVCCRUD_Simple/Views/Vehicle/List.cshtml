
@model List<MVCCRUD_Simple.Models.Vehicle>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Karanfil Kiralama Motor Filosu
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Plaka</th>
                                <th>Marka</th>
                                <th>Model</th>
                                <th>Yaş</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.LicencePlate</td>
                                        <td>@item.VehicleBrand</td>
                                        <td>@item.VehicleModel</td>
                                        <td>@item.VehicleAge</td>
                                        <td width="20%">
                                            <button class="btn btn-warning btn-circle"           
                                                    data-toggle="modal"
                                                    data-target="#myModal"
                                                    onclick="IdAtama(@item.VehicleID)">
                                                <i class="fa fa-try"></i>
                                            </button>
                                            <a class="btn btn-danger btn-circle"
                                               href="/Vehicle/Delete/@item.VehicleID">
                                                <i class="fa fa-minus "></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Kiralama İşlemi</h4>
                </div>
                    @using (Html.BeginForm("Rent", "Vehicle", FormMethod.Post))
                    {
                        <div class="modal-body">
                            <input type="hidden" id="vehicleID" name="VehicleID" />
                            <div class="form-group">
                                <label>Günlük Fiyat</label>
                                <input class="form-control"
                                       type="text"
                                       placeholder="Fiyat"
                                       name="DayPrice">
                            </div>
                            <div class="form-group">
                                <label>Kiralayan Kişi</label>
                                <input class="form-control"
                                       type="text"
                                       placeholder="Kiralayan Kişi"
                                       name="Customer">
                            </div>
                            <div class="form-group">
                                <label>Alış Tarih</label>
                                <input class="form-control"
                                       type="datetime-local"
                                       name="RentDate">
                            </div>

                            <div class="form-group">
                                <label>Kiralama Süresi</label>
                                <input class="form-control"
                                       type="text"
                                       placeholder="Kiralama Süresi"
                                       name="RentDay">
                            </div>


                        </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                                <input type="submit" class="btn btn-primary" value="Onayla" />
                            </div>
                    }
                 
                    
                        

                    </div>
                    <script type="text/javascript">
                        function vehicleID(id) {
                            document.getElementById("VehicleID").value = id;
                        }
                    </script>
