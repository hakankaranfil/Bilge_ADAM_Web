

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Araç Bilgileri
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        @*Post metodu ile Controller'daki HttpPost Metoduna gider*@
                        <form role="form" method="post">
                            <div class="form-group">
                                <label>Marka</label>
                                <input class="form-control" type="text" placeholder="Marka" name="VehicleBrand">
                            </div>
                            <div class="form-group">
                                <label>Model</label>
                                <input class="form-control" type="text" placeholder="Model" name="VehicleModel">
                            </div>
                            <div class="form-group">
                                <label>Yaş</label>
                                <input class="form-control" type="text" placeholder="Yaş" name="VehicleAge">
                            </div>
                            <div class="form-group">
                                <label>Plaka</label>
                                <input class="form-control" type="text" placeholder="Plaka" name="LicencePlate">
                            </div>
                            <div class="form-group">
                                <label>Günlük Ücret</label>
                                <input class="form-control" type="text" placeholder="Plaka" name="RentPrice">
                            </div>
                            <div class="form-group">
                                <label>Araç Tipi</label>
                                <select id="type" class="form-control" onchange="var x = document.getElementById('type').value; document.getElementById('typeID')">
                                    <option value="0">Araba</option>
                                    <option value="1">Motor</option>
                                </select>
                                <input id="typeID" type="hidden" name="VehicleType" value="0" />
                                
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
