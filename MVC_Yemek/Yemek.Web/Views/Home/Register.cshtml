@model Yemek.Entity.Model.Customer
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutOgrenci.cshtml";
}
@using (Ajax.BeginForm("Register", "Home", FormMethod.Post, new AjaxOptions { OnSuccess = "success" }))
            {
    <form>
        <div class="panel-body">
            <div class="row">
                <div class="form-group">
                    @*@Html.ValidationSummary()
                        @Html.TextBoxFor(m => m.Email, new { @placeholder = "E-mail" })*@
                    E-Mail: <input type="text" name="Email" id="Email" /> <br />
                </div>
            </div>
        </div>
        <button id="kaydet" type="submit"
                class="btn btn-primary btn-block">
            Kaydet
        </button>
        <div class="resultForm"></div>
    </form>

}

<script>
    $('.form-group input').attr('class', 'form-control')
</script>
<script>
    $(function () {
        $("form").validate({
            rules: {
                Email: {
                    required: true,
                    email: true
                }

            },
            messages: {
                Email: {
                    required: "Email alanı boş bırakılamaz",
                    email: "Email formatında giriniz"
                },
            }
        });
    });
    $('#kaydet').click(function () {
        if ($('form').valid()) {
            $('.resultForm').text;
        }
    });
    function success(result) {
        if (result.IsSuccess == true) {
            $("form")[0].reset();
            alert("Kaydınız başarılı");

        }
        else {
            alert("Böyle Bir E-posta zaten kayıtlı");
            $("form")[0].reset();
        }
    }
</script>

