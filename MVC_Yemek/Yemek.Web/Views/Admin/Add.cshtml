<html>
<body>
    <div class="container">
        <div class="row">
            <h2>Yemek Çeşitleri</h2>
            <div id="userMessage"></div>


            @using (Ajax.BeginForm("Add", "Admin", FormMethod.Post, new AjaxOptions { OnSuccess = "success" }))
            {

                for (int i = 0; i < Model.Count(); i++)
                {
                    if (Model[i].ProductType == Yemek.Entity.Model.ProductType.Soup)
                    {
                        @Html.HiddenFor(it => it[i].ProductID)
                        @Html.EditorFor(it => it[i].IsSelected)  @Model[i].ProductName<br />
                    }
                    else if (Model[i].ProductType == Yemek.Entity.Model.ProductType.MainCourse)
                    {


                        @Html.HiddenFor(it => it[i].ProductID)
                        @Html.EditorFor(it => it[i].IsSelected)  @Model[i].ProductName<br />

                    }
                    else if (Model[i].ProductType == Yemek.Entity.Model.ProductType.Dessert)
                    {

                        @Html.HiddenFor(it => it[i].ProductID)
                        @Html.EditorFor(it => it[i].IsSelected)  @Model[i].ProductName<br />
                    }
                }
                <button type="submit"
                        class="btn btn-primary btn-block">
                    Kaydet
                </button>
            }
        </div>
    </div>
</body>
</html>
<script>
    $('.form-group input').attr('class', 'form-control')
</script>




















