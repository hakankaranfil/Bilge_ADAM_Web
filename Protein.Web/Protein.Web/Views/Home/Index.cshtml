@using PagedList
@using PagedList.Mvc
@model IPagedList<Protein.Entity.Model.Product>
@{
    ViewBag.Title = "Index";
}
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <h2> Kategoriler</h2> 
            <div class="list-group">
                @foreach (var item in ViewBag.Category)
                {
                    <ul>
                        <li id="sep" class="sepet">
                            <a href="/Home/ProductCategory/@item.CategoryID" class="list-group-item">@item.CategoryName</a>
                        </li>
                    </ul>
                }
            </div>
        </div>
        <div class="col-md-9">
            <div class="row carousel-holder">
                <div class="col-md-12">
                    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="item active">
                                <a href="/Home/ProductDetails/8"><img src="https://www.aloprotein.com/image/cache/catalog/slayt/xHardline_Thermo_L-Karnitin_Kampanya_Banner-1138x390.png.pagespeed.ic.8ng5i1Hgu_.webp" alt="hardline thermo" class="img-responsive" data-pagespeed-url-hash="2737929796" onload="pagespeed.CriticalImages.checkImageForCriticality(this);" draggable="false"></a>
                            </div>
                            <div class="item">
                                <a href="/Home/ProductDetails/9"> <img src="https://www.aloprotein.com/image/cache/catalog/slayt/xarnoldyeni2a-1138x390-1138x390.png.pagespeed.ic.jyBGNr_KTz.webp" alt="mpharm" class="img-responsive" data-pagespeed-url-hash="42008453" onload="pagespeed.CriticalImages.checkImageForCriticality(this);" draggable="false"></a>
                            </div>
                            <div class="item">
                                <img src="https://www.aloprotein.com/image/cache/catalog/slayt/xhitec_banner2-min-1138x390.png.pagespeed.ic.qTJQR_AxE2.webp" alt="hitec" class="img-responsive" data-pagespeed-url-hash="3142437060" onload="pagespeed.CriticalImages.checkImageForCriticality(this);" draggable="false">
                            </div>
                        </div>
                        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                        </a>
                        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                        </a>
                    </div>
                </div>
            </div>
            <h2 id="ü">Ürünlerimiz</h2>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <div class="img-responsive">
                            <img src="@item.ProductPhoto" height="200" width="200" alt="">
                            <h4>
                                <a class="product-price" href="/Home/ProductDetails/@item.ProductID">@item.ProductName</a>
                            </h4>
                            <p class="product-price">@item.Price TL</p>
                        </div>
                    </div>
                }
            </div>
            <div class="container" style="width:867px;">
                <div class="pager-container">
                    <ul class="pager">
                        <li class="next">
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
  



