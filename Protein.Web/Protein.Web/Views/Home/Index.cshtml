
@{
    ViewBag.Title = "Index";
}
<style type="text/css">
    #My {
        width: 70%;
        margin: auto;
    }
</style>
<div class="container">

    <div id="My" class="row carousel-holder">
        <div class="col-md-15">
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="https://www.aloprotein.com/image/cache/catalog/slayt/xIMG_3934-1138x390.PNG.pagespeed.ic.3OXrlKc5PS.webp" alt="2yil" class="img-responsive" data-pagespeed-url-hash="723495370" onload="pagespeed.CriticalImages.checkImageForCriticality(this);" draggable="false">
                    </div>
                    <div class="item">
                        <img src="https://www.aloprotein.com/image/cache/catalog/slayt/xhitec_banner2-min-1138x390.png.pagespeed.ic.qTJQR_AxE2.webp" alt="hitec" class="img-responsive" />
                    </div>
                    <div class="item">
                        <img src="https://www.aloprotein.com/image/cache/catalog/slayt/xMuscle_Cheff_Coffee_BANNER-1138x390.png.pagespeed.ic.dNMMgqMUh_.webp" alt="muscle cheff coffee" class="img-responsive" draggable="false">
                    </div>
                </div>
                <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
            </div>
        </div>
    </div>

    <hr>
    <!-- Title -->
    <div class="row">
        <div class="col-lg-12">
            <h3>En Çok Satanlar</h3>
        </div>
    </div>
    <!-- /.row -->
    <!-- Page Features -->
   
        <div class="row text-center">
@foreach (var item in ViewBag.Product)
{
            <div class="col-md-3 col-sm-6 hero-feature">
                <div class="thumbnail">
                    <img src="@item.ProductPhoto" alt="">
                    <div class="caption">
                        <h3>@item.ProductName</h3>
                        <h2>@item.Price TL</h2>
                        <p>
                            <a href="#" class="btn btn-primary">Sepete Ekle</a> <a href="/Home/ProductDetails/@item.ProductID" class="btn btn-default">İncele</a>
                        </p>
                    </div>

                </div>

            </div>
}
        </div>
    </div>

    <hr>
    <!-- Footer -->
    


