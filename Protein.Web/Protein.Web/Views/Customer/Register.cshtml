@model Protein.Entity.Model.Customer
@{
    ViewBag.Title = "Register";
}

<section class="sign-up">
    <div class="container">

        <h2>Üye Ol</h2>
        <hr>
        <div class="register-content">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <div class="half">
                    <div class="form-row">
                        <label for="name">Ad *</label>
                        <input type="text" id="name" maxlength="35" name="Name" title="Lütfen Adınızı Giriniz" autocomplete="off" required>
                    </div>
                    <div class="form-row">
                        <label for="name">Soyad *</label>
                        <input type="text" id="surNameField" maxlength="35" name="Surname" title="Lütfen Soyadnızı Giriniz." autocomplete="off" required>
                    </div>
                    <div class="form-row">
                        <label for="e-mail">E-posta Adresiniz *</label>
                        <input type="text" id="e-mail" title="Lütfen e-posta adresinizi giriniz" maxlength="60" name="Email" autocomplete="off" required>
                    </div>
                </div>

                <div class="half">
                    <div class="form-row">
                        <label for="mobile">Cep Telefonu</label>
                        <input type="tel" id="mobile" maxlength="30" name="Phone" class="form-control" autocomplete="off">
                    </div>

                    <div class="form-row">
                        <label for="password">Parola *</label>
                        <input type="password" id="password" name="Password" maxlength="30" title="Şifreniz minimum 8 karakter olmalı en az 1 rakam ve büyük/küçük harf içermelidir." autocomplete="off" required>
                    </div>
                    <div class="form-row">
                        <label for="address">Adres *</label>
                        <input type="text" id="adress" name="Address" maxlength="30" title="Lütden adresinizi giriniz" autocomplete="off" required>
                    </div>
                </div>

                <div class="full">
                    <input class="btn green btn-arrow-login" type="submit" value="ÜYE OL" />
                </div>
            }
        </div>
    </div>
</section>




